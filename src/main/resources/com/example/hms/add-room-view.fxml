                        <Label alignment="CENTER" prefWidth="150.0" text="Price: ">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txt_price" alignment="CENTER">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>
                  <Label fx:id="lb_mess" alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="364.0" textAlignment="CENTER" textFill="#4aab45">
                     <font>
                        <Font size="14.0" />
                     </font></Label>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="140.0" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label alignment="CENTER" prefWidth="150.0" text="Status: ">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txt_status" alignment="CENTER">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="210.0" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onShowList" text="ShowList" textAlignment="RIGHT" />

                        <Button mnemonicParsing="false" onAction="#onSubmit" text="Add" textAlignment="RIGHT" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
